<div class="container col-4 mt-5">
  <div class="d-flex justify-content-between mb-3">
    <h3><%= Category.model_name.human %></h3>
    <%= link_to t('view.new'), new_admin_category_path, class: 'btn btn-dark' %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class='col-9'><%= Category.human_attribute_name(:name) %></th>
        <th scope="col"><%= t('view.action') %>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name.humanize %></td>
          <td>
            <%= link_to t('view.edit'), edit_admin_category_path(category), class: "btn btn-dark btn-sm" %>
            <%= link_to t('view.destroy'), admin_category_path(category), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: t('view.destroy_confirm') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>