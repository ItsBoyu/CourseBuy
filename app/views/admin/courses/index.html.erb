<div class="container col-9 mt-5">
  <div class="d-flex justify-content-between mb-3">
    <h3><%= Course.model_name.human %></h3>
    <%= link_to t('view.new'), new_admin_course_path, class: 'btn btn-dark' %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><%= Course.human_attribute_name(:title) %></th>
        <th scope="col"><%= Course.human_attribute_name(:category) %></th>
        <th scope="col"><%= Course.human_attribute_name(:status) %></th>
        <th scope="col"><%= Course.human_attribute_name(:price) %></th>
        <th scope="col"><%= Course.human_attribute_name(:price_currency) %></th>
        <th scope="col" class="col-2"><%= t('view.action') %>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.title %></td>
          <td><%= course.category.name %></td>
          <td><%= Course.human_attribute_name("statuses.#{course.status}") %></td>
          <td><%= course.price %></td>
          <td><%= course.price_currency %></td>
          <td>
            <%= link_to t('view.edit'), edit_admin_course_path(course), class: "btn btn-dark btn-sm" %>
            <%= link_to t('view.destroy'), admin_course_path(course), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: t('view.destroy_confirm') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>